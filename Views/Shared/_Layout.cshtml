<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentPlanner.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="position-relative">
        <nav class="navbar d-flex w-100 fixed-bottom position-relative p-3 justify-content-between">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/logo.png" alt="logo" width="80" height="80">
                </a>
                <button class="btn d-flex align-items-end" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/assets/menu-black.png" width="45" height="45">
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
                    <div class="offcanvas-header">
                        <img src="~/assets/wo_logo.png" alt="logo" width="80" height="80" />
                        <input type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close" />
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end p-3 flex-grow-2">
                            <li class="nav-item">
                                <a class="nav-link text-white active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            @{
                                if (ViewData["UserName"] != null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Courses" asp-action="Index">
                                            Dashboard
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="offcanvas-footer">
                        @{
                            if (ViewData["UserName"] != null)
                            {   
                                    <partial name="_LoginPartial.cshtml" class="text-white" />
                            }
                        }
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black p-5">
        <h1 class="footer-text text-white">Plan your studies today!</h1>
        <a class="btn btn-outline-light" href="https://localhost:7013/Identity/Account/Login">Get Started</a>
        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <img src="~/assets//wo_logo.png" alt="logo" width="50" height="50" />
                </div>
                <div class="col">
                    <p class="fw-bold">Policy</p>
                    <a class="link-info text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
            &copy; 2023 - StudentStudyPlannerApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
