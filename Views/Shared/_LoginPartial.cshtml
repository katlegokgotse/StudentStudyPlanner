@using Microsoft.AspNetCore.Identity
@using StudentPlanner.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item w-100">
            <form id="logoutForm" class="form-inline w-100 p-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-outline-secondary w-100 text-light border-0 text-center">Logout</button>
        </form>
    </li>
}

@if (!SignInManager.IsSignedIn(User))
    {
        <li class="nav-item w-100" asp-area=" Identity" asp-page="/Account/Login">
            <a id="login" class="nav-link btn btn-outline-secondary w-100 text-light border-0 text-center">Login</a>
        </li>
    }
</ul>
